<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>BackupHandler</display-name>
	<servlet>
		<servlet-name>Blogger</servlet-name>
		<servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>com.sun.jersey.config.property.packages</param-name>
			<param-value>de.sfranke.backuphandler.blogger.rest</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>OAuth</servlet-name>
		<servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>com.sun.jersey.config.property.packages</param-name>
			<param-value>de.sfranke.backuphandler.oauth.rest</param-value>
		</init-param>
	</servlet>

   <servlet-mapping>
      <servlet-name>Blogger</servlet-name>
      <url-pattern>/rest/blogger/v1.0/*</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
      <servlet-name>OAuth</servlet-name>
      <url-pattern>/rest/oauth/v1.0/*</url-pattern>
   </servlet-mapping>
</web-app>
